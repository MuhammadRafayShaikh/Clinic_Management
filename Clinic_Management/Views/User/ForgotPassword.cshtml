@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Find Your Account</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            width: 100%;
            max-width: 400px;
            border: none;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-main {
            background-color: #5D87FF;
            color: white;
            border: none;
        }

            .btn-main:hover {
                background-color: #476ed7;
            }

        .btn-secondary-link {
            color: #5D87FF;
            background-color: transparent;
            border: none;
            text-decoration: underline;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(93, 135, 255, 0.25);
            border-color: #5D87FF;
        }
    </style>
</head>
<body>

    <div class="card p-4">
        <h5 class="text-center mb-3">Find Your Account</h5>
        <p class="text-muted text-center mb-4">Please enter your mobile number or email to search for your account.</p>

        <form method="post" asp-action="SearchAccount">
            <div class="mb-3" id="phoneField">
                <input type="text" name="mobile" class="form-control" placeholder="Enter mobile number" />
            </div>

            <div class="mb-3 d-none" id="emailField">
                <input type="email" name="email" class="form-control" placeholder="Enter email address" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-main">Continue</button>
                <button type="button" class="btn btn-secondary-link" id="toggleButton">
                    Search by email instead
                </button>
            </div>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            let usingPhone = true;

            $("#toggleButton").click(function () {
                if (usingPhone) {
                    $("#phoneField").addClass("d-none");
                    $("#emailField").removeClass("d-none");
                    $(this).text("Search by phone instead");
                    usingPhone = false;
                } else {
                    $("#emailField").addClass("d-none");
                    $("#phoneField").removeClass("d-none");
                    $(this).text("Search by email instead");
                    usingPhone = true;
                }
            });
        });
    </script>
    <script>
        @if (TempData["error"] != null)
        {
            <text>
                    toastr.error('@TempData["error"]');
            </text>
        }
    </script>

</body>
</html>
