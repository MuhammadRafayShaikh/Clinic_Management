@model List<Order>

<h2>Orders</h2>
<h2>Orders</h2>
<h2>Completed Orders</h2>

<a asp-controller="Pharmacist" asp-action="ShowOrders" class="btn btn-primary">Pending Orders </a>
<div class="card-body ">
    <table class="table table-striped table-bordered table-hover">
        <thead class="text-dark">
            <tr>
                <th>Id</th>
                <th>Customer Name</th>
                <th>Order date</th>

                <th>Total Price </th>
                <th>Payment Status</th>
                <th>Delivery Status</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody id="orders_table">
            <tr>
                @foreach (var order in Model)
                {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User.Name</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.OrderStatus</td>
                    <td>
                        <a asp-controller="Pharmacist" asp-action="ViewOrder" asp-route-id="@order.Id" class="btn btn-success">
                            View<i class="fas fa-eye "></i>
                        </a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
    @if (TempData["error"] != null)
    {
        <text>
                            Swal.fire({
                                title: 'Error!',
                            text: '@TempData["error"]',
                            icon: 'error',
                            confirmButtonText: 'Okay'
                                                        });
        </text>
    }

    @if (TempData["success"] != null)
    {
        <text>
                                Swal.fire({
                                    title: 'Success!',
                                        text: '@TempData["success"]',
                                icon: 'success',
                                confirmButtonText: 'Okay'
                                                            });
        </text>
    }
    })
</script>