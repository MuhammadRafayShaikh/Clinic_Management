@model Clinic_Management.Models.MedicalInstrument

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Add Medicine Here</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Pharmacist" asp-action="EditMachine" method="post" enctype="multipart/form-data">
                            <input type="hidden" value="@Model.Id" asp-for="Id" />
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Machine Name</label>
                                <input asp-for="Name" value="@Model.Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="UnitPrice" class="form-label">Unit Price</label>
                                <input asp-for="UnitPrice" value="@Model.UnitPrice" class="form-control">
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Manufacturer" class="form-label">Manufacturer</label>
                                <input asp-for="Manufacturer" value="@Model.Manufacturer" class="form-control">
                                <span asp-validation-for="Manufacturer" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ManufacturerEmail" class="form-label">Manufacturer Email</label>
                                <input asp-for="ManufacturerEmail" value="@Model.ManufacturerEmail" class="form-control">
                                <span asp-validation-for="ManufacturerEmail" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                                <input asp-for="StockQuantity" value="@Model.StockQuantity" class="form-control">
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ReorderLevel" class="form-label">Reorder Level</label>
                                <input asp-for="ReorderLevel" value="@Model.ReorderLevel" class="form-control">
                                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Machine Category</label>
                                <select asp-for="CategoryId" class="form-control">
                                    <option selected disabled>Select Category</option>
                                    @foreach (var categories in ViewBag.categories)
                                    {
                                        <option selected="@(categories.Id == Model.CategoryId ? "selected" : null)" value="@categories.Id">@categories.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Machine Description</label>
                                <textarea class="form-control" asp-for="Description">@Model.Description</textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Machine Image</label>
                                <input type="file" name="Image" onchange="document.querySelector('#old_image').src=window.URL.createObjectURL(this.files[0])" class="form-control">
                                <img class="mt-3" id="old_image" height="150px" src="~/MachinesImages/@Model.Image" alt="">
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
        </div>
    </div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
    @if (TempData["error"] != null)
    {
        <text>
                        Swal.fire({
                            title: 'Error!',
                        text: '@TempData["error"]',
                        icon: 'error',
                        confirmButtonText: 'Okay'
                                                                    });
        </text>
    }
                            });
</script>
