            @* <button type="button" class="btn text-dark" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fa fa-search"></i></button> *@
            @using System.Text
            @{
                bool sessionid = accessor.HttpContext.Session.Keys.Contains("id");
                bool cookieid = accessor.HttpContext.Request.Cookies.Keys.Contains("id");
                if (!sessionid && !cookieid)
                {
                    <a asp-controller="User" asp-action="Login" asp-route-returnUrl="@Convert.ToBase64String(Encoding.UTF8.GetBytes(Context.Request.Path))" class="btn btn-success py-2 px-4 ms-3">Login</a>
                    <a asp-controller="User" asp-action="Register" asp-route-returnUrl="@Convert.ToBase64String(Encoding.UTF8.GetBytes(Context.Request.Path))" class="btn btn-primary py-2 px-4 ms-3">Signup</a>
                }

                else
                {
                    string userImage = accessor.HttpContext.Session.GetString("image");
                    if (string.IsNullOrEmpty(userImage))
                    {
                        userImage = accessor.HttpContext.Request.Cookies["image"];
                        <img width="35" height="35" style="border-radius: 50%;" src="~/UserImages/@userImage" alt="Profile" />

                        if (!string.IsNullOrEmpty(userImage))
                        {
                            accessor.HttpContext.Session.SetString("image", userImage);
                        }
                    }
                    else if (!string.IsNullOrEmpty(userImage))
                    {
                        <img width="35" height="35" style="border-radius: 50%;" src="~/UserImages/@userImage" alt="Profile" />
                    }

                    <div class="nav-item dropdown">

                        @{
                            string userName = accessor.HttpContext.Session.GetString("name");

                            if (string.IsNullOrEmpty(userName))
                            {
                                userName = accessor.HttpContext.Request.Cookies["name"];
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@userName</a>

                                if (!string.IsNullOrEmpty(userName))
                                {
                                    accessor.HttpContext.Session.SetString("name", userName);
                                }
                            }
                            else if (!string.IsNullOrEmpty(userName))
                            {
                                userName = accessor.HttpContext.Session.GetString("name");
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@userName</a>
                            }
                        }
                        <div class="dropdown-menu m-0">
                            <a asp-controller="Home" asp-action="UpdateProfile" class="dropdown-item">Profile</a>
                            <a asp-controller="Home" asp-action="ShowOrders" class="dropdown-item">Orders</a>
                            <a asp-controller="Home" asp-action="ShowBookings" class="dropdown-item">Bookings</a>
                            @if (accessor.HttpContext.Session.GetString("role") == "3")
                            {
