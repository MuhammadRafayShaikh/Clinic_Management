                            }
                            <a asp-controller="Home" asp-action="CartItems" class="dropdown-item">Cart</a>
                            <a asp-controller="User" asp-action="Logout" class="dropdown-item">Logout</a>
                        </div>
                    </div>

                    <a asp-controller="User" asp-action="Logout" class="btn btn-primary py-2 px-4 ms-3">Logout</a>
                }
            }
