                    <select id="doctorSelect" class="form-select bg-light border-0 mb-3" style="height: 40px;">
                        <option selected disabled>Select A Doctor</option>
                        @foreach (var doctors in ViewBag.doctors)
                        {
                            <option value="@doctors.Id">@doctors.Name</option>
                        }
                    </select>

                    <a id="searchDoctorBtn" class="btn btn-light" href="javascript:void(0);" onclick="searchDoctor()">Search Doctor</a>
                </div>
            </div>
            <div class="col-lg-4 wow zoomIn" data-wow-delay="0.6s">
                <div class="bg-secondary d-flex flex-column p-5" style="height: 300px;">
                    <h3 class="text-white mb-3">Make Appointment</h3>
                    <p class="text-white">Schedule your appointment effortlessly and receive expert care tailored to your needs, at a time that suits you best.</p>
                    <h2 class="text-white mb-0">+92 315 3307757</h2>
                </div>
            </div>
        </div>
    </div>
</div>
