@model List<Clinic_Management.Models.Booking>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @if (Model.Any())
            {
            <h1 class="text-center">Your Bookings</h1>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Seminar Title</th>
                            <th>Doctor Name</th>
                            <th>Date & Time</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var bookings in Model)
                        {
                            <tr>
                                <td>@bookings.Id</td>
                                <td>@bookings.Seminar.Title</td>
                                <td>@bookings.User.Name</td>
                                <td>@bookings.Seminar.DateTime</td>
                                <td>@bookings.Seminar.Price</td>
                                <td><img height="120px" src="~/SeminarImages/@bookings.Seminar.Image" /></td>
                                <td><a asp-controller="Home" asp-action="SeminarDetail" asp-route-id="@bookings.SeminarId">See Detail</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            }

            else
            {
                <h2 class="text-center mt-3 mb-3">No Booking Found</h2>
            }


            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
                    @if (TempData["error"] != null)
                    {
                        <text>
                        Swal.fire({
                            title: 'Error!',
                        text: '@TempData["error"]',
                        icon: 'error',
                        confirmButtonText: 'Okay'
                                                                                                                                                                                                                                                        });
                        </text>
                    }
                    @if (TempData["success"] != null)
                    {
                        <text>
                        Swal.fire({
                            title: 'Done!',
                        text: '@TempData["success"]',
                        icon: 'success',
                        confirmButtonText: 'Okay'
                                                                                                                                                                                                                                                                });
                        </text>
                    }
                                                                                                                });

    </script>