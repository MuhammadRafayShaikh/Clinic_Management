@model Seminar

<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Seminar</h1>
            <a asp-controller="Home" asp-action="Index" class="h4 text-white">Home</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="" class="h4 text-white">Seminar</a>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Pricing Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-5">
                <div class="section-title mb-4">
                    <h5 class="position-relative d-inline-block text-primary text-uppercase">Pricing Plan</h5>
                    <h1 class="display-5 mb-0">We Offer Fair Prices for Medicines</h1>
                </div>
                <p class="mb-4">
                    @Model.Description
                </p>
                <h5 class="text-uppercase text-primary wow fadeInUp" data-wow-delay="0.3s">Registration</h5>
                <h1 class="wow fadeInUp" data-wow-delay="0.6s">@Model.Registration</h1>
            </div>
            <div class="col-lg-7">
                <div class="wow zoomIn" data-wow-delay="0.9s">
                    <div class="price-item pb-4">
                        <div class="position-relative">
                            <img class="img-fluid rounded-top" src="~/SeminarImages/@Model.Image" alt="">
                            <div class="d-flex align-items-center justify-content-center bg-light rounded pt-2 px-3 position-absolute top-100 start-50 translate-middle"
                                 style="z-index: 2;">
                                <h2 class="text-primary m-0">Price : @Model.Price</h2>
                            </div>
                        </div>
                        <div class="position-relative text-center bg-light border-bottom border-primary py-5 p-4">
                            <h4>@Model.Title</h4>
                            <hr class="text-primary w-50 mx-auto mt-0">
                            <div class="d-flex justify-content-between mb-3">
                                <span>Be On Time</span><i class="fa fa-check text-primary pt-1"></i>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>24/7 Call Support</span><i class="fa fa-check text-primary pt-1"></i>
                            </div>
                            @{
                                if (Model.Registration == Seminar._Registration.Open)
                                {
                                    <a asp-controller="Home" asp-action="Booking" asp-route-id="@Model.Id" class="btn btn-primary py-2 px-4 position-absolute top-100 start-50 translate-middle">Booking</a>
                                }
                            }


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Pricing End -->
