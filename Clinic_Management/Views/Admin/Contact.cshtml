@model List<Clinic_Management.Models.Contact>
<h2>Medicine Stock Report</h2>
<h2>Medicine Stock Report</h2>
<h2 class="text-center">Contact Us Report</h2>


<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Id</td>
                <td>@contact.User.Name</td>
                <td>@contact.User.Email</td>
                <td>@contact.Subject</td>
                <td>@contact.Message</td>
                
                <td><button type="button" data-bs-toggle="modal" data-bs-target="#viewAppointmentModal_@contact.Id" class="btn btn-info btn-sm">View User</button></td>

                <div class="modal fade" id="viewAppointmentModal_@contact.Id" tabindex="-1" aria-labelledby="viewAppointmentLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="viewAppointmentLabel">User Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>Name:</strong> @contact.User.Name</p>
                                <p><strong>Email:</strong> @contact.User.Email</p>
                                <p><strong>Phone:</strong> @contact.User.Phone</p>
                                <p><strong>Address:</strong> @contact.User.Address</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
    @if (TempData["success"] != null)
    {
        <text>
                                Swal.fire({
                                    title: 'Error!',
                                text: '@TempData["success"]',
                                icon: 'error',
                                confirmButtonText: 'Okay'
                                                });
        </text>
    }
                });
</script>